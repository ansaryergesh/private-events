<div class="row">
 <div class="col-md-6 col-md-offset-3">

	<h1>All events</h1>

	<h1> Upcoming Events: </h1>
	<% Event.upcoming.each do |e| %>
	<ul>
		<li>
			<h3><%=link_to e.event, event_url(e.id) %></h3>
			<p><%= e.description %></p>
			<p><%= e.date.strftime("%B %e, %Y") %></p>
		</li>
	</ul>
	<hr>
	<% end %>

<h1> Past Events: <h1>

<% Event.past.each do |e| %>
<ul>
	<li>
		<h3><%= link_to e.event, event_url(e.id) %></h3>
		<p><%= e.description %></p>
		<p><%= e.date.strftime("%B %e, %Y") %></p>
	</li>
</ul>
<hr>
<% end %>
	</div>
</div>